<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#FF43B8FF</Color>
    <Color x:Key="DarkPrimaryColor">#FF43B8FF</Color>

    <SolidColorBrush x:Key="MouseHoverBrush" Color="#FF43B8FF"/>
    <SolidColorBrush x:Key="MouseDownBrush" Color="#FF43B8FF"/>

    <LinearGradientBrush x:Key="PrimaryBrush" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="#FF43B8FF" Offset="0"/>
        <GradientStop Color="#FF43B8FF" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="DarkPrimaryBrush" Color="#FF43B8FF"/>

    <Color x:Key="TitleColor">#FF43B8FF</Color>
    <Color x:Key="SecondaryTitleColor">#FF43B8FF</Color>

    <LinearGradientBrush x:Key="TitleBrush" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="#FF43B8FF" Offset="0"/>
        <GradientStop Color="#FF43B8FF" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>